generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Work {
  id        Int      @id @default(autoincrement())
  title     String
  date      DateTime
  excerpt   String
  body      String
  imageUrl  String?
  kind      String   @default("did")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
