generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Work {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  coverImage  String?
  excerpt     String?
  contentJson Json
  kind        String   @default("did")
  tags        String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
